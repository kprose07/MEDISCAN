<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="95dp"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:outlineProvider="none"
    app:cardBackgroundColor="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nsc_image"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:adjustViewBounds="true"
            android:background="@drawable/reccentcardtop"
            android:contentDescription="@string/lily_medication"
            android:scaleType="centerInside"
            android:src="@drawable/ic_pillsrec"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/nsc_title"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:background="@drawable/reccentcardbot"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="@string/recmedname"
            android:textAlignment="gravity"
            android:textAppearance="@style/recmedname"
            android:textColor="#000000"
            android:textColorLink="#F11212"
            android:ellipsize="end"
            android:maxLines="1"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>


</androidx.cardview.widget.CardView>