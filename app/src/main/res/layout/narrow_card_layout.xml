<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="103dp"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:outlineProvider="none"
    app:cardBackgroundColor="@null">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nsc_image"
            android:layout_width="103dp"
            android:layout_height="72dp"
            android:adjustViewBounds="true"
            android:background="@drawable/narrow_image"
            android:contentDescription="@string/lily_medication"
            android:scaleType="centerInside"
            android:src="@drawable/reports"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/nsce_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/narrow_text"
            android:fontFamily="@font/poppins_mediumbb"
            android:gravity="center"
            android:text="@string/summary"
            android:textAlignment="gravity"
            android:textColor="#707070"
            android:textColorLink="#F11212"
            android:textSize="10sp"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.cardview.widget.CardView>