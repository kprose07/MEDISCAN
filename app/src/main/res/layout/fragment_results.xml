<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/names_for_t"
            android:layout_width="302dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="57dp"
            android:fontFamily="@font/poppins"
            android:gravity="top"
            android:lineSpacingExtra="10sp"
            android:text="@string/names_for_t"
            android:textAppearance="@style/names_for_t"
            android:translationY="-5sp" />

        <TextView
            android:id="@+id/brand_names"
            android:layout_width="112dp"
            android:layout_height="21dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/poppins_extrabold"
            android:gravity="top"
            android:lineSpacingExtra="0sp"
            android:text="@string/brand_names"
            android:textAppearance="@style/brand_names" />

        <TextView
            android:id="@+id/tirzepatide"
            android:layout_width="159dp"
            android:layout_height="21dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="141dp"
            android:layout_marginTop="100dp"
            android:gravity="top"
            android:lineSpacingExtra="0sp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/tirzepatide"
            android:textAppearance="@style/tirzepatide" />

        <TextView
            android:id="@+id/generic_nam"
            android:layout_width="119dp"
            android:layout_height="23dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="129dp"
            android:fontFamily="@font/poppins_extrabold"
            android:gravity="top"
            android:lineSpacingExtra="0sp"
            android:text="@string/generic_nam"
            android:textAppearance="@style/generic_nam" />

        <TextView
            android:id="@+id/mounjaro"
            android:layout_width="171dp"
            android:layout_height="23dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="148dp"
            android:layout_marginTop="129dp"
            android:gravity="top"
            android:lineSpacingExtra="0sp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/mounjaros"
            android:textAppearance="@style/mounjaros" />

        <TextView
            android:id="@+id/medication_"
            android:layout_width="122dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="160dp"
            android:fontFamily="@font/poppins_mediumbb"
            android:gravity="top"
            android:lineSpacingExtra="10sp"
            android:text="@string/medicationtitle"
            android:textAppearance="@style/medicationtitle"
            android:translationY="-5sp" />

        <View
            android:id="@+id/pillrs"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="203dp"
            android:background="@drawable/pillr" />

        <TextView
            android:id="@+id/medtitr"
            android:layout_width="139dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="97dp"
            android:layout_marginTop="210dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="18sp"
            android:text="@string/medtitr"
            android:textAppearance="@style/medtitr" />


        <TextView
            android:id="@+id/expand_al"
            android:layout_width="91dp"
            android:layout_height="19dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="254dp"
            android:layout_marginEnd="15dp"
            android:clickable="true"
            android:fontFamily="@font/poppins"
            android:lineSpacingExtra="18sp"
            android:onClick="onClick"


            android:singleLine="true"
            android:text="@string/expand_al"
            android:textAppearance="@style/collapse_al"
            tools:ignore="TouchTargetSizeCheck" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="279dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </RelativeLayout>

</LinearLayout>