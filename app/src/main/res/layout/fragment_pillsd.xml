<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_pillsd"
            android:src="@drawable/ic_pills"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"/>

        <SearchView
            android:id="@+id/pillsearch"
            android:layout_width="313dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="81dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_mediumbb"
            android:iconifiedByDefault="false"
            android:padding="4dp"
            android:queryBackground="@null"
            android:queryHint="Narrow Down Your Search"
            android:searchIcon="@drawable/ic_search"
            android:textColorHint="#A6080C2F"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/medicine"
            android:layout_width="322.52dp"
            android:layout_height="24.68dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="137dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="-2sp"
            android:text="@string/medicine"
            android:textAppearance="@style/medicine" />
    </RelativeLayout>
</FrameLayout>